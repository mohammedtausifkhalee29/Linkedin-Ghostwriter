# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Project Settings
PROJECT_NAME="LinkedIn Ghostwriter API"
API_V1_STR="/api/v1"

# Security
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# CORS Settings
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# Database
# SQLite: sqlite:///./database/ghostwriter.db
# PostgreSQL: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./database/ghostwriter.db

# AI/LLM Configuration
# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here
# LLM Model to use (gpt-4, gpt-4-turbo, gpt-3.5-turbo, claude-3-opus, etc.)
LLM_MODEL=gpt-4

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Email/SMTP Configuration
# SMTP server settings (e.g., SendGrid, Gmail, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
